@page "/"
@inject IUserHttpService _user

<h1> سلام 6745!</h1>
به برنامه آپارتمان من خوش آمدید.

@isUser

@code{
    [CascadingParameter]
    public MainLayout Layout { get; set; } = new MainLayout();

    string isUser = "";

    protected override async Task OnInitializedAsync()
    {
     
        Layout.Title = "صفحه اصلی";
        var check = await _user.CheckUserIs();

        if(check == true){
            isUser = "کاربر وجود دارد";
        }
        else if(check == false){
            isUser = "کاربر نیست";
        }
        else{
            isUser = "خطا در دریافت اطلاعات";
        }
    }

}