@code {
    [Parameter]
    public bool SideMenu { get; set; }

    private bool _value;
    private bool _Value
    {
        get => _value;
        set
        {
            if (_value != value)
            {
                _value = value;
                SideEffect();
                //  ValueChanged.InvokeAsync(_value);
            }
        }
    }

    public void SideEffect()
    {
        Console.WriteLine($"Parameter has changed: {_Value}"); //i want this method executed when value changes from parent

    }



    protected override void OnParametersSet()
    {

            _Value = false;
        
    }
}
